@implements ICell
<InputCheckbox @bind-Value=IsAlive @bind-Disabled=@(IsDisabled)></InputCheckbox>

@code {
    private Cell impl = new();
    private bool isDisabled;

    public bool IsDisabled 
    {
        get => isDisabled; 
        set
        {
            if (value != isDisabled)
            {
                isDisabled = value;
                StateHasChanged();
            }
        }
    }

    public bool IsAlive 
    { 
        get => impl.IsAlive; 

        set 
        {
            if (value != impl.IsAlive)
            {
                impl.IsAlive = value;
                StateHasChanged();
            }
        }
    }
    public bool WillLive { get => impl.WillLive; set => impl.WillLive = value; }

    public int Row { get => impl.Row; set => impl.Row = value; }
    public int  Column { get => impl.Column; set => impl.Column = value; }
    public ICell[,] Cells { get => impl.Cells; set => impl.Cells = value; }

    public List<ICell> Neighbors => impl.Neighbors;
    public void CalculateNextTick() => impl.CalculateNextTick();
    public void Tick()
    {
        impl.Tick();
        StateHasChanged();
    }

}
